<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
>

	<TextView
		android:id="@+id/labelSObjectType"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:text="SObject Type:"
		android:textStyle="bold"
	>
	</TextView>
	<TextView
		android:id="@+id/type"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_below="@+id/labelSObjectType"
		android:textStyle="bold"
	>
	</TextView>
	<TextView
		android:id="@+id/labelName"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:text="Name"
		android:layout_below="@+id/type"
		android:textStyle="bold"
	>
	</TextView>
	<EditText
		android:id="@+id/name"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_below="@+id/labelName"
		android:textSize="18sp"
	>
	</EditText>
	<TextView
		android:id="@+id/labelId"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:text="Id"
		android:layout_below="@+id/name"
		android:textStyle="bold"
	>
	</TextView>
	<EditText
		android:id="@+id/ids"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_below="@+id/labelId"
		android:textSize="18sp"
	>
	</EditText>
	<TextView
		android:id="@+id/labelQuery"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:text="Query"
		android:layout_below="@+id/ids"
		android:textStyle="bold"
	>
	</TextView>
	<EditText
		android:id="@+id/queryString"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_below="@+id/labelQuery"
		android:textSize="18sp"
	>
	</EditText>
	<Button
		android:id="@+id/createButton"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="Create"
		android:textStyle="bold"
		android:layout_below="@+id/queryString"
	>
	</Button>
	<Button
		android:id="@+id/deleteButton"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="Delete"
		android:textStyle="bold"
		android:layout_below="@+id/queryString"
		android:layout_toRightOf="@+id/createButton"
	>
	</Button>
	<Button
		android:id="@+id/queryAllButton"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="queryAll"
		android:textStyle="bold"
		android:layout_toRightOf="@+id/deleteButton"
		android:layout_below="@+id/queryString"
	>
	</Button>
	<Button
		android:id="@+id/doneButton"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="   Done   "
		android:textStyle="bold"
		android:layout_toRightOf="@+id/queryAllButton"
		android:layout_below="@+id/queryString"
	>
	</Button>
	
	<TextView
		android:id="@+id/txt"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textStyle="bold"
		android:layout_below="@+id/doneButton"
	>
	</TextView>

</RelativeLayout>
